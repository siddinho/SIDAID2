<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_nearby_place_picker"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.siddharth.sidaid2.NearbyPlacePicker"
    tools:showIn="@layout/activity_nearby_place_picker">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:hint="Name of Place"
        android:textSize="25sp"
        android:background="#FFFFFF"
        android:padding="5dp"
        android:textColor="@color/colorPrimaryDark"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:hint="Address of Place"
        android:textSize="25sp"
        android:background="#FFFFFF"
        android:padding="5dp"
        android:textColor="@color/colorPrimaryDark"/>


    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        app:button_icon="@drawable/walk"
        app:button_icon_height="50dp"
        app:button_icon_width="50dp"
        app:expandable_area_color="#feafa0"
        app:hide_text="Go to This Place!"
        app:hide_text_color="@android:color/black"
        app:hide_text_size="12dp"
        app:icon_button_color="@android:color/holo_blue_bright"
        app:magic_button_size="80dp" />

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/reselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        app:button_icon="@drawable/walk"
        app:button_icon_height="50dp"
        app:button_icon_width="50dp"
        app:expandable_area_color="#feafa0"
        app:hide_text="Reselect!"
        app:hide_text_color="@android:color/black"
        app:hide_text_size="12dp"
        app:icon_button_color="@android:color/holo_orange_light"
        app:magic_button_size="80dp" />



</LinearLayout>
